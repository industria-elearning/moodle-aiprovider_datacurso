{{!
    @template aiprovider_datacurso/consumption_row

    Template for rendering consumption history rows.

    Example context:
    {
        "consumptions": [
            {
                "id_consumption": 12,
                "userid": 4,
                "action": "Generate summary",
                "id_service": "service_xyz",
                "cant_tokens": 35,
                "balance": 1250,
                "date": "2025-10-20"
            }
        ]
    }
}}

{{#consumptions}}
<tr>
    <td>{{id_consumption}}</td>
    <td>{{#userid}}{{userid}}{{/userid}}{{^userid}}-{{/userid}}</td>
    <td>{{action}}</td>
    <td>{{id_service}}</td>
    <td>{{cant_tokens}}</td>
    <td>{{balance}}</td>
    <td>{{date}}</td>
</tr>
{{/consumptions}}
